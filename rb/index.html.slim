#services.container.services
  br
  .section

    .row.center
      h5.col.s12 THOUGHTNIRVANA IS A SOFTWARE DEVELOPMENT SHOP
      h6.col.s12 BASED OUT OF THE BEAUTIFUL CITY OF BANGALORE
    .row.center.margintop50
      h4 WHAT WE DO
    .divider.teal.lighten-1.marginbot50
    .row.center
      - services.each do |service|
        .col.s12.m6.l4
          div[class="topic card-panel waves-effect waves-light waves-ripple hoverable #{service['class']}"]
            h3 = service["header"]
            h3 = service["header2"]
            p.light = service["description"]

#parallax-container1.parallax-container.valign-wrapper
  .section.no-pad-bot
    .container
      .row.center
        h4.header.col.s12.dark = tenets[0]["header"]
        h5.header.col.s12.dark = tenets[0]["description"]
  .parallax
    img src="../img/1.jpg" alt="Unsplashed background img 2"

#clients.container
  br
  .section
    .row.center.margintop50
      h4 WHO WE HAVE DONE IT FOR
      .divider.teal.lighten-1.marginbot50
      .slider
        ul.slides
          - testimonials.each do |testimonial|
            li
              .caption.right-align
                blockquote.teal-text = testimonial['say']
                h5.light.teal-text = testimonial['name']
  .section
    .row
      - clients.each do |client|
         div[class="logowrap #{client['name']} col s12 m6 l4"]
          div
            .logo
              img.responsive-img src="img/Logos/#{client['logo']}"

