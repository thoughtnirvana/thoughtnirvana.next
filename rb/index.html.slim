#hows.container.hows
  br
  .section

    .row.center.margintop50
      h4 HOW WE DO
      .divider.teal.lighten-1.marginbot50
      h3 The ThoughtNirvana way
      h6.light Software for the humans, by the humans
      h6.light We believe software is a facilitator
      h6.light We build software that obeys you, not the other way round
      .marginbot50
    .row.center
      - hows.each do |how|
        .col.s12.m6.l4
          div[class="card-panel waves-effect waves-light waves-ripple amber lighten-5 hoverable how #{how['header']} #{how['class']}"]
            i.teal-text.material-icons.medium = "#{how['icon']}"
            h3 = how["header"]
            strong.thin = how["subheader"]
            p.light = how["description"]

#code.container
  br
